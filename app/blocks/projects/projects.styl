.projects

	// width 1809px
	// height 817px

	position relative
	padding-top 80px
	width 100%
	overflow hidden

	.box
		position relative

	.content
		+mobile()
			padding-x 0


	&:before
		content ''
		position absolute
		height 1px
		left 50%
		width 1000px
		margin-left -500px
		top -1px
		background-image linear-gradient( 0deg, rgba(204,204,204,0.5) 0%, rgb(204,204,204) 50%, rgba(204,204,204,0.5) 100%)
		+below(1000px)
			width 100%
			left 0
			margin-left auto

	&__inner
		position relative
		+mobile()
			overflow hidden
			overflow-x scroll
			-webkit-overflow-scrolling touch

	&__btn-send
		filter drop-shadow(0px 2px 4px rgba(0, 0, 0, 0.22))
		&
		a
			color #16BB7F
			cursor pointer
			&:hover
				color #00A273
		&__text
			font-family robotoCond
			font-size 18px
			fill #FFF



	&__tiles-row
		font-size 0
		position relative
		+mobile()
			display inline-block
			white-space nowrap

	&__tiles
		white-space nowrap
		margin-left -525px
		margin-right -525px
		&:after
			width 100%
		+mobile()
			display flex
			flex-direction row
			align-items flex-start
			align-content flex-start
			justify-content flex-start
			white-space normal
			flex-wrap wrap
			margin-left 0
			margin-right 0
			// fix two lines
			width 2420px
			&:after
				content ''
				order 3

.tiles-row

	&-1
		margin-left 380px
		+mobile()
			order 1
			margin-left 0
	&-2
		margin-left 274px
		+mobile()
			order 4
			margin-left 106px
		// transform translate3d(0,-40px,0)
		.tile a
			transform translate3d(0,-40px,0)
	&-3
		margin-left 170px
		+mobile()
			order 2
			margin-left 10px
		// transform translate3d(0,-80px,0)
		.tile a
			transform translate3d(0,-80px,0)
			+mobile()
				transform translate3d(0,0,0)
	&-4
		margin-left 66px
		+mobile()
			order 5
			margin-left 10px
		// transform translate3d(0,-120px,0)
		.tile a
			transform translate3d(0,-120px,0)
			+mobile()
				transform translate3d(0,-40px,0)

.projects-top-hexagon
	retinaSprite $projects_top_hexagon_group
	position absolute
	top -58px
	left 17px
	+mobile()
		display none

.projects-right-hexagon
	retinaSprite $projects_right_hexagon_group
	display inline-block
	vertical-align top
	margin-left 10px
	margin-top 40px
	+mobile()
		display none

.mail-icon
	width 18px
	height 12px
	margin-left 6px



.tile
	width 200px
	height 218px

	display inline-block
	vertical-align top
	position relative
	white-space normal
	filter drop-shadow(0px 2px 4px rgba(0, 0, 0, 0.22))

	// &:hover
	// 	.tile__text
	// 		display table
	// 	.tile__fill
	// 		display block


	svg&__element
		overflow visible
		// filter url(#f1)


	& + &
		margin-left 10px

	&__link
		cursor pointer
		/* autoprefixer: off */


	&__fill
		display none

	&__text
		position absolute
		cursor pointer
		top 0
		left 0
		// display flex
		// align-items center
		// align-content center
		display table
		width 200px
		height 218px
		line-height 1.2
		color #FFF
		text-align center
		padding-right 10px
		padding-left 10px
		font-size 20px
		font-family robotoCond
		text-decoration none
		// display none
		// &:hover
		// 	display table
		&-inner-wrap
			display table-cell
			vertical-align middle
		&-inner
			text-align center
		&.is-hidden
			display none

	&__mail-icon
		position absolute
		left 50%
		margin-left -9px
		bottom 30px



.promo-block
	position absolute
	right 0
	bottom 0
	width 50%
	padding-right 60px
	padding-bottom 160px
	text-align right
	display none
	+below(940px)
		position static
		text-align center
		width 100%
		padding-right 0
		padding-bottom 40px
	+mobile()
		display block

	&--is-hidden-mobile
		display block

		+mobile()
			display none

	&__text
		color #171717
		font-size 24px
		line-height 40px
		font-weight bold
		margin-bottom 36px
		text-align right
		+below(940px)
			text-align center
			font-size 18px
			line-height 20px
			margin-bottom 30px
