.projects

	// width 1809px
	// height 817px

	position relative
	padding-top 80px
	width 100%
	overflow hidden


	&:before
		content ''
		position absolute
		height 1px
		left 50%
		width 1000px
		margin-left -500px
		top -1px
		background-image linear-gradient( 0deg, rgba(204,204,204,0.5) 0%, rgb(204,204,204) 50%, rgba(204,204,204,0.5) 100%)
		+below(1000px)
			width 100%

	&__inner
		position relative


	&__promo
		position absolute
		right 0
		bottom 0
		width 50%
		padding-right 60px
		padding-bottom 160px
		text-align right
		+mobile(density: retina)
			position static
			text-align center
			width 100%
			padding-right 0
			padding-bottom 40px

	&__text
		color #171717
		font-size 24px
		line-height 40px
		font-weight bold
		margin-bottom 36px
		text-align right
		+mobile(density: retina)
			text-align center
			font-size 18px
			line-height 20px
			margin-bottom 30px

	&__tiles-row
		font-size 0
		position relative

	&__tiles
		white-space nowrap
		margin-left -525px
		margin-right -525px

.tiles-row
	&-1
		margin-left 380px
	&-2
		margin-left 274px
		top -40px
	&-3
		margin-left 171px
		top -80px
	&-4
		margin-left 66px
		top -120px

.projects-top-hexagon
	retinaSprite $projects_top_hexagon_group
	position absolute
	top -58px
	left 17px

.projects-right-hexagon
	retinaSprite $projects_right_hexagon_group
	display inline-block
	vertical-align top
	margin-left 10px
	margin-top 40px

.mail-icon
	width 18px
	height 12px
	margin-left 6px



.tile
	width 200px
	height 218px

	display inline-block
	vertical-align top
	position relative
	white-space normal

	& + &
		margin-left 10px

	&__link
		clip-path url(#clipping-tile)
		cursor pointer

	&__fill
		display none

	&__text
		position absolute
		top 0
		left 0
		// display flex
		// align-items center
		// align-content center
		display table
		width 200px
		height 218px
		line-height 1.2
		color #FFF
		text-align center
		padding-right 10px
		padding-left 10px
		font-size 20px
		font-family robotoCond
		text-decoration none
		&-inner-wrap
			display table-cell
			vertical-align middle
		&-inner
			text-align center
		&.is-hidden
			display none

	&__mail-icon
		position absolute
		left 50%
		margin-left -9px
		bottom 30px
