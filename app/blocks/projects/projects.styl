.projects

	position relative
	width 100%
	overflow hidden

	.box
		position relative

	.content
		+mobile()
			padding-x 0


	&__head
		text-align center

	&__heading
		display inline-block
		vertical-align top
		font-family openSans
		font-weight regular
		font-size 30px
		line-height 1.3
		color #171717
		width 100%
		max-width 660px
		margin-bottom 60px
		padding-x 30px
		+mobile()
			font-size 18px
			line-height 1.1
			max-width 320px
			font-weight semibold
		strong
			font-weight semibold

	&__inner
		position relative
		+mobile()
			overflow hidden
			overflow-x scroll
			-webkit-overflow-scrolling touch





	&__tiles-row
		font-size 0
		position relative
		+mobile()
			display inline-block
			white-space nowrap

	&__tiles
		white-space nowrap
		margin-left -525px
		margin-right -525px
		&:after
			width 100%
		+mobile()
			display flex
			flex-direction row
			align-items flex-start
			align-content flex-start
			justify-content flex-start
			white-space normal
			flex-wrap wrap
			margin-left 0
			margin-right 0
			// fix two lines
			width 2420px
			&:after
				content ''
				order 3

.tiles-row

	&-1
		margin-left 380px
		+mobile()
			order 1
			margin-left 0

	&-2
		margin-left 275px
		+mobile()
			order 4
			margin-left 106px
		.tile a
		.isie & .tile__element
			transform translateY(-40px)
	&-3
		margin-left 170px
		+mobile()
			order 2
			margin-left 10px
		.tile a
		.isie & .tile__element
			transform translateY(-80px)
			+mobile()
				transform translateY(0)
	&-4
		margin-left 65px
		+mobile()
			order 5
			margin-left 10px
		.tile a
		.isie & .tile__element
			transform translateY(-120px)
			+mobile()
				transform translateY(-40px)

.projects-right-hexagon
	retinaSprite $projects_right_hexagon_group
	display inline-block
	vertical-align top
	margin-left 10px
	margin-top 40px
	+mobile()
		display none

.mail-icon
	width 18px
	height 12px
	margin-left 6px



.tile
	width 200px
	height 218px

	display inline-block
	vertical-align top
	position relative
	white-space normal
	filter drop-shadow(0px 2px 4px rgba(0, 0, 0, 0.22))

	svg&__element
		overflow visible


	& + &
		margin-left 10px

	&__link
		cursor pointer

	&__fill
		display none

	&__text
		position absolute
		cursor pointer
		top 0
		left 0
		display table
		width 200px
		height 218px
		line-height 1.2
		color #FFF
		text-align center
		padding-right 10px
		padding-left 10px
		font-size 20px
		font-family robotoCond
		text-decoration none
		&-inner-wrap
			display table-cell
			vertical-align middle
		&-inner
			text-align center
		&.is-hidden
			display none

	&__mail-icon
		position absolute
		left 50%
		margin-left -9px
		bottom 30px



