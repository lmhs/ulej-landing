.footer
	position relative
	padding-top 20px
	padding-bottom 27px
	&::before
		content ''
		position absolute
		left 0
		top 0
		right 0
		height 1px
		background linear-gradient( 0deg, rgba(204,204,204,0.5) 0%, rgb(204,204,204) 50%, rgba(204,204,204,0.5) 100%)



	&__partner
		&-logo
			width 190px
			height 54px
		&-logo-wrap
			color #21518f
		&-text
			text-transform uppercase
			color #666
			margin-top 12px
			text-align center
			font-size 10px
			line-height 22px
			font-weight semibold

	&__agreement
		line-height 30px

	&__social-row

		&-1
		&-2
		&-3
			font-size 0

		&-1
		&-2
			text-align right

		&-1
		&-3
			padding-right 15px

		&-2
		&-3
			margin-top -7px

	&__phone
		&-link
			color #666
			text-decoration none
			line-height 22px
			&:hover
				color $blue

