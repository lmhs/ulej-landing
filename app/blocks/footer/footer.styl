.footer
	position relative
	padding-top 20px
	padding-bottom 27px
	border-bottom 40px solid #333
	+mobile()
		overflow hidden
		border-bottom none
	&:before
		content ''
		position absolute
		left 0
		top 0
		right 0
		height 1px
		background linear-gradient( 0deg, rgba(204,204,204,0.5) 0%, rgb(204,204,204) 50%, rgba(204,204,204,0.5) 100%)

	+below(1024px)
		padding 30px 25px 90px

	.footer__address
		display block
		&-col
			+below(1060px)
				width calc(100% - 575px)
			+below(850px)
				width 100%


			+mobile()
				width auto
		+below(1024px)
			display inline

	.container
		+mobile()
			display block


		+below(850px)
			.col
				display block
				width 100%

	&__partner
		&-col
			text-align center

			+mobile()
				margin-top 50px
		&-logo
			width 190px
			height 54px
			display inline-block
			vertical-align top
		&-logo-wrap
			color #21518f
			text-align center
		&-text
			text-transform uppercase
			color #666
			margin-top 12px
			text-align center
			font-size 10px
			line-height 22px
			font-weight semibold

	&__agreement
		height 30px

	&__contact-col
		position relative
		+mobile()
			margin-top 20px
	&__phones
		display inline-block
		vertical-align top
	&__social
		width 254px
		display inline-block
		vertical-align top
		+mobile()
			position absolute
			top -45px
			right -83px



	&__social-row

		&-1
		&-2
		&-3
			font-size 0

		&-1
		&-2
			text-align right

		&-1
		&-3
			padding-right 16px

		&-2
		&-3
			margin-top -7px

	&__phone
		&-link
			color #666
			text-decoration none
			line-height 22px
			&:hover
				color $blue

.divider
	color #CCC

.caption
	color #666
	line-height 22px

