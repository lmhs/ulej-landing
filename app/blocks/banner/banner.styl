.banner
	border-radius 3px
	height 90px
	overflow hidden
	background url(../images/cookies.jpg) top center no-repeat
	text-align center
	position relative
	background-size cover
	+retina()
		background-image url(../images/cookies@2x.jpg)



	+below(1024px)
		border-radius 0
	+mobile()
		height auto



	&__text
		color #FFF
		font-size 30px
		line-height 90px
		font-weight light
		text-decoration none
		position absolute
		top 0
		left 0
		width 100%
		z-index 1
		&:before
			content ''
			display block
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			z-index -1
			content ''
			transition background-color 0.2s ease-in

		+below(720px)
			font-size 20px
			line-height 34px
			height 100%
			padding 40px 10px
			position relative
			display inline-block

		&:hover:before
			background-color rgba(0,0,0,.3)
			transition all 0s

	&__underline
		display inline-block
		font-weight semibold
		line-height 1
		border-bottom 4px solid #06b7c5


