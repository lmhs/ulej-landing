.banner
	border-radius 3px
	height 90px
	overflow hidden
	background url(../images/bg-beans.jpg) top center repeat-x
	text-align center
	position relative
	background-size 2560px 1600px
	&__link-main
		width 0
		height 0
		&::after
			content ''
			position absolute
			top 0
			left 0
			width 100%
			height 100%
	&__text
		color #FFF
		font-size 30px
		line-height 90px
		font-weight light
	&__underline
		display inline-block
		font-weight semibold
		line-height 1
		border-bottom 4px solid #06b7c5


