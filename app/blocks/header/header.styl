.header
	overflow hidden
	&__inner
		// background url(../images/header-background.png) top center no-repeat

		// background-size 1207px 658px
		position relative
		max-width 1200px
		// min-height 860px
		margin-x auto
		// overflow hidden

	&__bg-img-clip
		position absolute
		z-index 0
		top 0
		left 50%
		margin-left -580px
		image
			/* autoprefixer: off */
			clip-path url(#clipping-bg)

	&__bg-img
		position absolute
		z-index 0
		// left 40px
		top 0
		left 50%
		margin-left -560px
		+mobile()
			margin-left 0
			left auto
			top auto
		+below(660px)
			width 660px
			height 440px
		+below(480px)
			margin-left -420px
			left 50%


	&__bg-clip
		position relative
		top 0
		left 50%
		margin-left -560px
		padding-left 40px
		// z-index 1
		// height 1365px
		height 860px
		width 1160px
		// background 	url(../images/header-background-big.png) center top no-repeat
		// background-size 1160px 858px
		padding-top 260px
		+below(1160px)
			width 100%
			margin-left auto
			left 0
			right 0
		+mobile()
			padding-top 170px
			height 650px
			background-position-y -200px
			padding-x 20px


		&:before
		&:after
			content ''
			position absolute
			display block
			background-color #FFF
			top 0
			width 100%
			bottom 0
		&:before
			left -100%
		&:after
			right -100%

	&__content
		position relative
		// top 860px
		+mobile()
			// top 650px

	&__hexagon-items
		position absolute
		top -400px
		right 40px
		+below(1160px)
			right -90px
		+mobile()
			display none

	&__heading
		color #FFF
		font-family openSans

		font-weight semibold
		font-size 40px
		text-align center
		text-shadow 0px 1px 48.02px rgba(0, 0, 0, 0.88)
		+mobile()
			font-size 24px
			line-height 30px
		small
			font-weight regular
			display block
			margin-top 14px
			font-size 19px
			color #DDD
			+mobile()
				font-size 14px
				line-height 20px

	&__subheader
		position relative
		text-align center
		padding-top 70px
		padding-bottom 80px
		z-index 0
		+mobile()
			padding 30px 25px

		&:before
			content ''
			display block
			height 1px
			background-image linear-gradient( 0deg, rgba(204,204,204,0.5) 0%, rgb(204,204,204) 50%, rgba(204,204,204,0.5) 100%)
			position absolute
			top -1px
			width 1000px
			left 50%
			margin-left -500px
			z-index -1
			+mobile()
				left 20px
				right 20px



	&__subheading
		+mobile()
			font-size 24px
			line-height 1.2
		strong
			font-weight bold

	&__subsection
		font-size 0
		text-align center
		padding-x 75px
		+mobile()
			padding-x 20px

.half-subsection
	width 50%
	display inline-block
	vertical-align top
	font-family openSans

	position relative
	padding 50px 40px 80px


	+mobile()
		width 100%
		padding 25px 60px

	&:before
		content ''
		position absolute
		top -1px
		height 1px
		background-image linear-gradient( 0deg, rgba(204,204,204,0.5) 0%, rgb(204,204,204) 50%, rgba(204,204,204,0.5) 100%)

	&--left
		// padding-right 30px
		// padding-left 150px
		+mobile()
			padding-x 60px
		&:before
			left 0
			right 40px
			+mobile()
				right 20px
	&--right
		// padding-left 100px
		// padding-right 150px
		+mobile()
			padding-x 80px
		&:before
			left 40px
			right 0
			+mobile()
				right 20px

	&__content
		color #171717
		text-transform uppercase
		font-weight bold
		text-align left
		display inline-block
		vertical-align top
		white-space nowrap
		+mobile()
			// width 200px
			font-size 12px
			line-height 16px

	&__strong
		display inline-block
		vertical-align top
		font-size 48px
		font-weight semibold
		line-height 41px
		margin-right 15px
		+mobile()
			font-size 34px
			line-height 32px

	&__description
		display inline-block
		vertical-align top
		font-size 18px
		line-height 21px

.svg-defs
	position absolute
	width 0
	height 0

.help-block
	position absolute
	top 560px
	left 30px
	padding 16px 20px
	width 280px
	border-radius 6px
	background-color #fff
	border 1px dashed #CCC
	font-size 14px
	line-height 20px
	color #333
	+below(1160px)
		top 600px
	+mobile()
		bottom 37px
		top auto
		left 20px
		right 20px
		width auto

	&__phone
		margin-top 5px
		margin-bottom 5px
		display block
		text-decoration none
		color #000
		font-size 18px
		font-weight semibold

