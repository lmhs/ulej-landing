.sticker-link
	width 190px
	height 206px
	display block
	text-align center
	text-decoration none

	retinaSprite $section_green_mobile_group

	sprite $section_green_mobile

	&:before
		display inline-block

		height 100%

		content ''
		vertical-align middle

	&__heading
		font-size 22px
		color #FFF
		line-height 24px
		font-family robotoCond
		display inline-block
		vertical-align middle
		+mobile(density: retina)
			display none
		small
			font-family openSans
			color #E5FFF6
			font-size 14px
			display block
			margin-top 8px


.header__sticker-link
	position absolute
	right 215px
	top 416px
	z-index 2

	+below(1160px,density: retina)
		right 127px

	+mobile(density: retina)
		right 20px
		top 370px
