.how-works
	padding-top 80px
	padding-bottom 40px
	text-align center
	+mobile()
		padding-top 30px
		padding-bottom 0

	.content
		+below(800px)
			padding-x 0
	.container
		+below(780px)
			display block

	&__heading
		margin-bottom 80px
		+mobile()
			margin-bottom 30px

	&__send-btn-wrap
		text-align center
		margin-top 65px
		position relative
		&:after
			content ''
			display block
			height 1px
			width 100%
			position absolute
			top 50%
			left 0
			z-index -1
			background-image linear-gradient( 90deg, rgba(204,204,204,0.5) 0%, rgb(204,204,204) 50%, rgba(204,204,204,0.5) 100%)



.how-col-33
	position relative
	+below(950px)
		width 50%
		margin-bottom 35px
	+below(600px)
		width 100%
	& + &
		&:before
			content ''
			retinaSprite $how_arrow_group
			position absolute
			left 0
			margin-left -83px
			top 100px
			+below(970px)
				content none

.how-item
	width 240px
	display inline-block

	&__icon
		display inline-block
		vertical-align top
		width 202px
		height 219px
	&__heading
		color #171717
		font-size 18px
		line-height 30px
		font-family openSans
		font-weight bold
		margin-top 65px
		margin-bottom 15px
		+mobile()
			margin-top 30px
	&__caption
		color #666
		font-size 14px
		line-height 20px
