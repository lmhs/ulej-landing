.support
	padding-bottom 60px

	&__heading
		text-align center
		margin-top 50px
		margin-bottom 70px

	&__body
		font-size 0
		text-align center



.support-card
	display inline-block
	font-size 14px
	border-radius 6px
	border 1px solid rgb(204, 204, 204)
	width 288px
	height 278px

	&__head
	&__body
		height 50%

	&__logo
		position relative
		width 100%
		height 100%
		border 25px solid rgba(0,0,0,0)

		&-img
			position absolute
			equal()
			max-width 100%
			max-height 100%
			margin auto
			transform translateZ(0)

	&__body
		position relative
		padding 25px
		text-align center
		&::before
			content ''
			position absolute
			top -1px
			right 25px
			left 25px
			height 1px
			background linear-gradient( 0deg, rgba(204,204,204,0.5) 0%, rgb(204,204,204) 50%, rgba(204,204,204,0.5) 100%)

	&__text
		line-height 22px
		height 44px
		overflow hidden
		margin-bottom 22px
		font-weight semibold
		&:hover
			text-decoration none

	.comment-icon
		width 14px
		height 12px
		color #666
		margin-right 6px

	&__comment
		&-link
			color #666
		&-count
			color #666


.support-card-small
	display inline-block
	border-radius 6px
	border 1px solid rgb(204, 204, 204)
	margin-bottom 40px
	width 288px
	height 138px

	&__logo
		position relative
		width 100%
		height 100%
		border 25px solid rgba(0,0,0,0)

		&-img
			position absolute
			equal()
			max-width 100%
			max-height 100%
			margin auto
			transform translateZ(0)
